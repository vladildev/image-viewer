<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="600" prefWidth="800">

    <top>
        <ToolBar style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 2);" viewOrder="-1">
            <MenuButton text="File">
                <items>
                    <MenuItem text="Import Image" onAction="#handleImportImage"/>
                    <MenuItem text="Save Image" onAction="#handleSaveImage"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Load Config" onAction="#handleImportConfig"/>
                    <MenuItem text="Save Config" onAction="#handleSaveConfig"/>
                </items>
            </MenuButton>

            <Separator orientation="VERTICAL"/>

            <!-- Undo / Redo -->
            <Button fx:id="undoButton" text="↩" onAction="#handleUndo"/>
            <Button fx:id="redoButton" text="↪" onAction="#handleRedo"/>

            <Separator orientation="VERTICAL"/>

            <!-- Zoom -->
            <Button fx:id="zoomIntButton" text="+" onAction="#handleZoomIn"/>
            <Button fx:id="zoomOutButton" text="-" onAction="#handleZoomOut"/>

            <Separator orientation="VERTICAL"/>

            <!-- Translation -->
            <Button fx:id="translateLeftButton" text="←" onAction="#handleTranslateLeft"/>
            <Button fx:id="translateLeftRight" text="→" onAction="#handleTranslateRight"/>
            <Button fx:id="translateLeftUp" text="↑" onAction="#handleTranslateUp"/>
            <Button fx:id="translateLeftBottom" text="↓" onAction="#handleTranslateBottom"/>

            <Separator orientation="VERTICAL"/>

            <!-- Snapshots list -->
            <Label text="Snapshots :"/>
            <HBox spacing="6" alignment="CENTER_LEFT">
                <ComboBox fx:id="snapshotsComboBox" prefWidth="150" onAction="#handleSnapshotSelection"/>
                <Button text="Save" onAction="#handleSaveSnapshot"/>
            </HBox>

        </ToolBar>
    </top>

    <center>
        <StackPane fx:id="editorStack" style="-fx-background-color: white;">
            <ImageView fx:id="imageView"
                       preserveRatio="true"
                       fitWidth="600"
                       fitHeight="500"
                       style="-fx-background-color: white;">
                <StackPane.margin>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </StackPane.margin>
            </ImageView>
            
            <!-- Cadre semi-transparent -->
            <javafx.scene.shape.Rectangle fx:id="cadre"
                                          width="200"
                                          height="150"
                                          fill="transparent"
                                          stroke="red"
                                          strokeWidth="3"
                                          strokeType="INSIDE"
                                          opacity="0.7"
                                          mouseTransparent="false"/>
        </StackPane>
    </center>
    
</BorderPane>
