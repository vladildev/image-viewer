<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="600" prefWidth="800">

    <top>
        <ToolBar style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 2);" viewOrder="-1">
            <MenuButton text="File">
                <items>
                    <MenuItem text="Import Image" onAction="#handleImportImage"/>
                    <MenuItem text="Save Image" onAction="#handleSaveImage"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Load Config" onAction="#handleImportConfig"/>
                    <MenuItem text="Save Config" onAction="#handleSaveConfig"/>
                </items>
            </MenuButton>

            <Separator orientation="VERTICAL"/>

            <!-- Undo / Redo -->
            <Button fx:id="undoButton" text="↩" onAction="#handleUndo"/>
            <Button fx:id="redoButton" text="↪" onAction="#handleRedo"/>

            <Separator orientation="VERTICAL"/>

            <!-- Zoom -->
            <Label text="Zoom:"/>
            <TextField fx:id="zoomInput" prefWidth="60" promptText="100%"/>
            <Button fx:id="zoomButton" text="Apply" onAction="#handleZoom"/>

            <Separator orientation="VERTICAL"/>

            <!-- Translation -->
            <Label text="Translate X:"/>
            <TextField fx:id="translateXInput" prefWidth="60" promptText="px"/>
            <Label text="Y:"/>
            <TextField fx:id="translateYInput" prefWidth="60" promptText="px"/>
            <Button fx:id="translateButton" text="Apply" onAction="#handleTranslate"/>

        </ToolBar>
    </top>

    <center>
        <StackPane>
            <ImageView fx:id="imageView"
                       preserveRatio="true"
                       fitWidth="600"
                       fitHeight="500"
                       style="-fx-background-color: white;">
                <StackPane.margin>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </StackPane.margin>
            </ImageView>
            
            <!-- Cadre semi-transparent -->
            <javafx.scene.shape.Rectangle fx:id="cadre"
                                          width="200"
                                          height="150"
                                          fill="transparent"
                                          stroke="red"
                                          strokeWidth="3"
                                          strokeType="INSIDE"
                                          opacity="0.7"
                                          mouseTransparent="true"/>
        </StackPane>
    </center>

</BorderPane>
